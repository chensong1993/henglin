/* pages/yuyue_detail/yuyue_detail.wxss */

.bannerH {
  width: 100%;
  height: 400rpx;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.yuyue_main {
  margin: 0;
  height: 100%;
  background: #f1f4f8;
}

.car_type {
  background: #5bc2cb;
  color: white;
  width: 150rpx;
  margin-top: 10rpx;
  text-align: center;
  height: 50rpx;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  font-size: 34rpx;
}

.car_content {
  margin: 20rpx;
  border-radius: 10rpx;
  background: white;
  padding: 20rpx;
  clear: both;
  overflow: hidden;
}

.img_and_price {
  float: left;
  margin-right: 20rpx;
}

.view_img {
  width: 222rpx;
  height: 145rpx;
}

.img_car {
  width: 222rpx;
  height: 145rpx;
}

.yy_price {
  width: 222rpx;
  text-align: center;
  font-size: 30rpx;
  color: #5bc2cb;
}

.yy_content {
  float: left;
  width: 425rpx;
  font-size: 30rpx;
}

.go_yuyue {
  height: 80rpx;
  width: 300rpx;
  background: #5bc2cb;
  text-align: center;
  line-height: 80rpx;
  color: white;
  clear: both;
  overflow: hidden;
  position: relative;
  top: 100rpx;
  left: 50%;
  margin-bottom: 100rpx;
  border-radius: 10rpx;
  margin-left: -150rpx;
}

.tip {
  border-radius: 10rpx;
  top: 50%;
  clear: both;
  overflow: hidden;
  text-align: center;
  position: absolute;
  left: 50%;
  width: 350rpx;
  height: 100rpx;
  margin-top: -50rpx;
  margin-left: -175rpx;
  background: gainsboro;
  font-size: 30rpx;
  color: gray;
  margin-bottom: 300rpx;
  z-index: 999;
}

.w_img {
  float: left;
  line-height: 130rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.warning {
  width: 50rpx;
  height: 50rpx;
}

.w {
  float: left;
  height: 100%;
}

.mengceng {
  filter: alpha(Opacity=80);
  -moz-opacity: 0.8;
  opacity: 0.8;
  background: black;
  z-index: 99;
  position: absolute;
  width: 100%;
  top: 0;
}

.w_tip {
  padding-top: 10rpx;
  text-align: left;
}

.w_phone {
  text-align: left;
}
