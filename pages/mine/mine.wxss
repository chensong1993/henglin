  width: 163rpx;
  height: 44rpx;
  top: -70rpx;
  left: 30rpx;
}

.list {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.my_car {
  height: 80rpx;
  line-height: 80rpx;
  clear: both;
  overflow: hidden;
  border-bottom: 1rpx gainsboro solid;
}

.list_img {
  height: 40rpx;
