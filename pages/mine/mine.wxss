.money {
  position: relative;
  height: 80rpx;
  margin: 0 20rpx;
  top: -40rpx;
  clear: both;
  line-height: 80rpx;
  overflow: hidden;
  background: white;
  font-size: 26rpx;
  padding: 0 66rpx;
  border-radius: 5rpx;
  font-size: 30rpx;
}

